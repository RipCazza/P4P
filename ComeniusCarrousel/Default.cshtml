@*
    Permissies: ~
    Te bereiken van: _Layout, standaard verwijzing pagina
    Roept aan: [Aleen oningelogd]: _AboutDetails, [Alleen leerling]: Leerling/_Leerling, [Alleen leraar]: Leraar/_Leraar, [Alleen admin/decaan] Decaan/_Decaan
    Linkt door naar: ~
    Beschrijving: Standaard pagina voor alle gebruikers
*@

@{
    Page.Title= "Home";
    Layout = "~/_Layout.cshtml";
}

@if (User.IsInRole("Leerling"))
{
    @RenderPage("~/Leerling/_Leerling.cshtml")
}
else if (User.IsInRole("Leraar"))
{
    @RenderPage("~/Leraar/_Leraar.cshtml")
}
else if (User.IsInRole("Decaan") || User.IsInRole("Admin"))
{
    @RenderPage("~/Decaan/_Decaan.cshtml")
}
else
{
    @RenderPage("~/_AboutDetails.cshtml")
}