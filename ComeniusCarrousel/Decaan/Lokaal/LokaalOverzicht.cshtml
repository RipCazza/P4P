@{
    Layout = "~/_Layout.cshtml";
    Page.Title = "Lokaal overzicht";

    if (!User.IsInRole("Admin") && !User.IsInRole("Decaan"))
    {
        Response.Redirect("~/");
    }

    List<LokaalRepo.Lokaal> lokalen = LokaalRepo.GetLokalen();
}

<ul class="nav nav-tabs">
    <li><a href="~/">Home</a></li>
    <li class="dropdown active">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Overzichten <span class="caret"></span></a>
        <ul class="dropdown-menu">
            @if (User.IsInRole("Admin"))
            {
                <li><a href="~/Admin/Decaan/DecaanOverzicht">Decaanoverzicht</a></li>
            }
            <li class="active"><a href="~/Decaan/Lokaal/LokaalOverzicht.cshtml">Lokaaloverzicht</a></li>
            <li><a href="~/Decaan/Vak/VakOverzicht.cshtml">Vakkenoverzicht</a></li>
            <li><a href="~/Decaan/Leraar/LeraarOverzicht.cshtml">Lerarenoverzicht</a></li>
            <li><a href="~/Decaan/Mail/MailOverzicht.cshtml">E-mail overzicht</a></li>
        </ul>
    </li>
</ul>

<br>


<a class="btn btn-default" href="~/Decaan/Lokaal/LokaalToevoegen">
    <span class="glyphicon glyphicon-pencil"></span> Nieuw lokaal aanmaken
</a>

<table class="table">
    @foreach (LokaalRepo.Lokaal lokaal in lokalen)
    {
        <tr>
            <td>
                <a href="~/Decaan/Lokaal/LokaalWijzigen?id=@lokaal.LokaalId" class="btn btn-default">
                    <span class="glyphicon glyphicon-pencil"></span> Edit
                </a>
            </td>
            <td>@lokaal.LokaalNaam</td>
            <td>@lokaal.Capaciteit</td>
        </tr>
    }
</table>