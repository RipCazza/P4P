@*
    Permissies: Admin, Decaan
    Te bereiken van: _Layout
    Linkt door naar: Decaan/Mail/MailOverzicht
    Beschrijving: Deze pagina is gemaakt om mails te kunnen verwijderen. Het idee was om deze pagina met MailWijzigen te combineren.
*@

@{
    
    Layout = "~/_Layout.cshtml";

    
    if (!User.IsInRole("Admin") && !User.IsInRole("Decaan"))
    {
        Response.Redirect("~/");
    }

    int id = Convert.ToInt16(Request.QueryString["MailId"]);
    MailRepo.Mail mail = MailRepo.GetMail(id);

    if (mail == null)
    {
        Validation.AddFormError("Dit mail concept bestaat niet.");
    }

    if (IsPost && Request.Form["delete"] != null)
    {
        MailRepo.DeleteMail(id);
        Response.Redirect("~/Decaan/Mail/MailOverzicht");
    }
}

@Html.ValidationSummary()

<h2>Mail verwijderen</h2>

@if (mail != null)
{
    <p>
        <span>Mail Concept:</span>
        <span><b>@mail.Onderwerp</b></span>
    </p>

    <button type="button" class="btn btn-danger" id="floatRight" data-toggle="modal" data-target="#verwijderWarning"><span class="glyphicon glyphicon-remove"></span>&nbsp; Verwijder</button>

    <div id="verwijderWarning" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Waarschuwing</h4>
                </div>
                <div class="modal-body">
                    <p>Weet je zeker dat je mail <b>@mail.Onderwerp</b> wilt verwijderen?</p>
                </div>
                <div class="modal-footer">
                    <form method="post" class="form-inline">
                    <button type="submit" id="submit" name="delete" class="btn btn-danger">
            <span class="glyphicon glyphicon-remove"></span>&nbsp; Verwijderen
        </button>       
                    <button type="button" class="btn btn-default" data-dismiss="modal">Sluiten</button>
                        </form>
                </div>
            </div>

        </div>
    </div>
}

