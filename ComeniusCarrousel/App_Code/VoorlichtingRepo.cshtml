            }
        }
        public string Vak
        {
            get
            {
                var db = Database.Open(App.DataBase);
                var data = db.QuerySingle("SELECT VakNaam FROM Voorlichting INNER JOIN Vak ON Vak.VakId = Voorlichting.VakId WHERE VoorlichtingId = @0", voorlichtingId);
                if(data != null)
                {
                    db.Close();
                    return data.VakNaam;
