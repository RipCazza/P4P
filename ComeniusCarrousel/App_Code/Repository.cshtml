        public static void doSimpleIdUpdate(String table, String column, String value, String idName, int id) {
            var db = Database.Open(App.Database);
            db.Execute("UPDATE @0 SET @1 = @2 WHERE @3 = @4", table, column, value, idName, id);
            db.Close();
        }
    }

    // geeft een string array terug van een string gesplit op lijnen
    public static string[] SplitLeerlingen(string leerlingInvoer)
    {
        string[] leerlingen = leerlingInvoer.Split(new string[] { Environment.NewLine }, StringSplitOptions.None);
        return leerlingen;
    }
    
    // geeft een string array terug van een string gesplitst op leerling argumenten
    public static string[] SplitLeerling(string leerling)
    {
        char[] splitter = {'|'};
        string[] leerlingDetails = leerling.Split(splitter);
        return leerlingDetails;
    }
