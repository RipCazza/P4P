@functions{
    public static class CRUD {
        public static void doSimpleIdUpdate(String table, String column, String value, String idName, int id) {
            var db = Database.Open(App.Database);
            db.Execute("UPDATE @0 SET @1 = @2 WHERE @3 = @4", table, column, value, idName, id);
            db.Close();
        }
    }

    public static List<Tuple<int, string>> GetDecanen()
    {
        List<Tuple<int, string>> decanen = new List<Tuple<int, string>>{};
        var db = Database.Open("authenticationData");
        var selectedData = db.Query("SELECT UserProfile.UserId, UserName FROM UserProfile INNER JOIN webpages_UsersInRoles ON UserProfile.UserId=webpages_UsersInRoles.UserId WHERE RoleId=2");
        foreach (var row in selectedData)
        {
            decanen.Add(new Tuple<int, string> (row.UserId, row.UserName));
        }
        db.Close();
        return decanen;
    }
}