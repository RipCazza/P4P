@*Wordt standaard zo goed als overal aangeroepen*@
@{
    //Hier wordt gecontroleerd welke pagina actief is en verandert de variabelen; dit wordt later weer aangeroepen
    string dropdownOverzichtActive = "";
    string navHomeActive = "";
    string navDecaanActive = "";
    string navLokaalActive = "";
    string navVakActive = "";
    string navLeraarActive = "";
    string navVoorlichtingActive = "";
    string navMailActive = "";
    string navManageActive = "";
    
    if (Request.Url.AbsolutePath == "/")
    {
        navHomeActive = "active";
    }
    else if (Request.Url.AbsolutePath == "/Admin/Decaan/DecaanOverzicht")
    {
        navDecaanActive = "active";
        dropdownOverzichtActive = "dropdown active";
    }
    else if (Request.Url.AbsolutePath == "/Decaan/Lokaal/LokaalOverzicht")
    {
        navLokaalActive = "active";
        dropdownOverzichtActive = "dropdown active";
    }
    else if (Request.Url.AbsolutePath == "/Decaan/Vak/VakOverzicht")
    {
        navVakActive = "active";
        dropdownOverzichtActive = "dropdown active";
    }
    else if (Request.Url.AbsolutePath == "/Decaan/Leraar/LeraarOverzicht")
    {
        navLeraarActive = "active";
        dropdownOverzichtActive = "dropdown active";
    }
    else if (Request.Url.AbsolutePath == "/Decaan/Voorlichting/VoorlichtingOverzicht")
    {
        navVoorlichtingActive = "active";
        dropdownOverzichtActive = "dropdown active";
    }
    else if (Request.Url.AbsolutePath == "/Decaan/Mail/MailOverzicht")
    {
        navMailActive = "active";
        dropdownOverzichtActive = "dropdown active";
    }
    else if (Request.Url.AbsolutePath == "/User_Management/Manage")
    {
        navManageActive = "active";
    }
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@Page.Title</title>
        <link rel="icon" href="~/favicon.png">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="~/css/bootstrap.css" type="text/css">
        <link href="~/css/bootstrap-theme.css" rel="stylesheet" type="text/css">
        <link href="~/css/mainstyle.css" rel="stylesheet" type="text/css" />
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    </head>
    <body style="font-size: 16px;">
        <div class="page-header">
            <div class="container">
                <div id="floatLeft">
                    <img src="~/Logo Comenius SVG Grayscale.svg" alt="Comenius Logo" style="width: 320px; margin-top: 24px;"/>
                </div>
                <div id="floatRight">
                    <a href="~/" style="color: #fff;">
                        <span class="glyphicon glyphicon-home" style="color:#fff"></span>&nbsp; Main&nbsp;
                    </a>
                    @if(WebSecurity.IsAuthenticated)
                    {
                        <a href="~/About" style="color: #fff;">
                            <span class="glyphicon glyphicon-question-sign" style="color:#fff"></span>&nbsp; About&nbsp;
                        </a>
                        <a href="~/User_Management/Logout?ReturnUrl=~@Request.Url.AbsolutePath" style="color: #fff;">
                            <span class="glyphicon glyphicon-log-out" style="color:#fff"></span>&nbsp; Log out&nbsp;
                        </a>
                    }
                    else
                    {
                        <a href="~/User_Management/Login?ReturnUrl=~@Request.Url.AbsolutePath" style="color: #fff;">
                            <span class="glyphicon glyphicon-log-in" style="color:#fff"></span>&nbsp; Log in&nbsp;
                        </a>
                    }
                </div>
            </div>
        </div>
        </div>
        <div class="container" id="content">
            @if(WebSecurity.IsAuthenticated)
            {
            <ul class="nav nav-tabs">
            <li class="@navHomeActive"><a href="~/">Home</a></li>
            <li class="@navManageActive"><a href="~/User_Management/Manage">Account Beheren</a></li>
            @if (User.IsInRole("Admin") || User.IsInRole("Decaan"))
            {      
                    <li class="@dropdownOverzichtActive">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Overzichten <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            @if (User.IsInRole("Admin"))
                            {
                                    <li class="@navDecaanActive"><a href="~/Admin/Decaan/DecaanOverzicht">Decaan overzicht</a></li>
                            }
                                <li class="@navLokaalActive"><a href="~/Decaan/Lokaal/LokaalOverzicht">Lokaal overzicht</a></li>
                                <li class="@navVakActive"><a href="~/Decaan/Vak/VakOverzicht">Vak overzicht</a></li>
                                <li class="@navLeraarActive"><a href="~/Decaan/Leraar/LeraarOverzicht">Leraar overzicht</a></li>
                                <li class="@navVoorlichtingActive"><a href="~/Decaan/Voorlichting/VoorlichtingOverzicht">Voorlichting overzicht</a></li>
                                <li class="@navMailActive"><a href="~/Decaan/Mail/MailOverzicht">E-mail overzicht</a></li>
                        </ul>
                    </li>
            }
            </ul>
            }
            @RenderBody()
        </div>
        <footer class="footer">
            <div class="container">
                <div id="floatLeft">
                    <ul style="list-style-type:none">
                        <li>© @DateTime.Now.Year - Group Default</li>
                    </ul>
                </div>
                <div id="floatRight">
                    <ul style="list-style-type:none">
                        <li><a href="http://www.csg-comenius.nl/" style="color: #fff">www.csg-comenius.nl</a></li>
                        <li><a href="http://www.google.com" style="color: #fff">Link 2</a></li>
                        <li><a href="http://www.google.com" style="color: #fff">Link 3</a></li>
                    </ul>
                </div>
            </div>
        </footer>
    </body>
</html>